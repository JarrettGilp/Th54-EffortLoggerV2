<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RoleManagementController">
    <VBox prefWidth="400" prefHeight="300">
        <children>
            <Label text="Role Management" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <GridPane alignment="CENTER" hgap="10" vgap="10">
                <Label text="UserID:" GridPane.rowIndex="0" />
                <TextField fx:id="userIDField" promptText="Enter UserID" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Role:" GridPane.rowIndex="1" />
                <TextField fx:id="roleField" promptText="Enter Role" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                <Button text="Save" onAction="#saveRole" style="-fx-font-size: 14px;" />
            </HBox>
        </children>
    </VBox>
</AnchorPane>
